<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/videorelativeview"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <VideoView
            android:id="@+id/vvfortrailer"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <SeekBar
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_alignBottom="@+id/vvfortrailer"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="4dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/progressfill"
            android:splitTrack="false"
            android:thumb="@drawable/thumb"
            android:thumbOffset="2dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_marginRight="10dp"
            android:textColor="#B6B0B0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvagelimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#4E4B4B"
            android:text="TextView"
            android:textColor="#B6B0B0"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llforbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/orange"

            android:drawableLeft="@drawable/baseline_play_arrow_24"
            android:paddingHorizontal="100dp"
            android:text="@string/play_now"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:iconGravity="textStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvplot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#D5D0D0" />

        <TextView
            android:id="@+id/tvstarring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#807272" />

        <TextView
            android:id="@+id/tvdirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#807272" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvformylist"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_weight="1"


                app:srcCompat="@drawable/baseline_library_add_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="My List"
                android:textColor="#BFB9B9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvforrating"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_weight="1"

                app:srcCompat="@drawable/baseline_star_rate_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Rate"
                android:textColor="#BFB9B9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvforsharing"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_weight="1"

                app:srcCompat="@drawable/baseline_share_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Share"
                android:textColor="#BFB9B9" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9F9898" />


</LinearLayout>